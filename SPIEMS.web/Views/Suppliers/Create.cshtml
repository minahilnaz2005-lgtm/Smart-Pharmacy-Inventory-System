@model SPIEMS.DAL.Entities.Supplier

<h2>➕ Add Supplier</h2>

<a asp-action="Index" class="btn btn-secondary">← Back</a>

<form method="post" style="max-width:500px;margin-top:15px;">
    @Html.AntiForgeryToken()

    <div>
        <label>Name</label>
        <input asp-for="Name" required />
    </div>

    <div>
        <label>Phone</label>
        <input asp-for="Phone" />
    </div>

    <div>
        <label>Address</label>
        <input asp-for="Address" />
    </div>

    <button type="submit" class="btn btn-success" style="margin-top:10px;">💾 Save</button>
</form>